ScreenManager:
    Screen:
        name: "Pantalla 1"
        BoxLayout:
            orientation:"vertical"
            canvas:
                Color:
                    rgb: [0,0.5,0]
                Rectangle
                    pos: self.size
            Label:
                text: "Pantalla 1"
            TextInput:
                id: nombre
                hint_text: 'Ingrese Nombre'
                pos_hint: {'center_x':0.5,'center_y':0.75}
                size_hint: 0.95,0.5
                on_text: nombre.text 
            

            Button:
                text: "Ir a pantalla 2"
                on_press:
                    root.transition.direction = 'right'
                    root.current = "Pantalla 2"
                size_hint: (0.3,0.1)
                pos_hint: {'center_x':0.5, 'center_y':0.5}

    
